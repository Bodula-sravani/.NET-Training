@page
@model ASP.Net_application.Pages.Books.DeleteBookModel
@{
}
<table class="table">
    <thead>
           <tr>
                <th>BOOK TITLE</th>
                <th>AUTHOR</th>
                <th>PRICE</th>
                <th>PUBLICATION</th>
           </tr>
    </thead>
    <tbody>
          <tr>
                <td>@Model.book.BookTitle</td>
                <td>@Model.book.Author</td>
                <td>@Model.book.Price</td>
                <td>@Model.book.Publication</td> 
         </tr>
    </tbody>
</table>
<p>Are you sure to delete this book?</p>
<div>
    <form method="post">
        <button type="submit" class="btn btn-primary btn-sm">Yes</button>
    </form>
    
    <a href="/Books/IndexBooks"><button class="btn btn-danger">No</button></a>
</div>
